<div
  class="symbol-details flex-grow-1 w-100"
  data-symbol-details="1"
  data-chart-init="1"
  data-default-res="5"
  data-symbol="{{symbol}}"
>
  <div class="container-fluid py-3">
    <div class="row g-3">
      <div class="col-12 col-lg-8">
        <div class="card details-card">
          <div class="card-body">
            <div class="d-flex align-items-center justify-content-between mb-2">
              <h2 class="m-0">{{symbol}}</h2>

              <div class="d-flex align-items-center gap-2">
                <span class="text-muted">Interval:</span>
                <select class="form-select form-select-sm w-auto" id="res">
                  <option value="1">1m</option>
                  <option value="5" selected>5m</option>
                  <option value="15">15m</option>
                  <option value="30">30m</option>
                  <option value="60">1h</option>
                </select>
              </div>
            </div>

            <div id="quoteBox"
              hx-get="/details/{{symbol}}/quote"
              hx-trigger="load, every 15s"
              hx-swap="innerHTML">
            </div>

            <div id="chart"></div>
          </div>
        </div>
      </div>

      <div class="col-12 col-lg-4">
        <div class="card mb-3">
          <div class="card-body">
            <div id="tradeMsg"></div>

            <div class="mb-2 fw-semibold">Trade</div>

            <div class="input-group mb-2">
              <span class="input-group-text">Qty</span>
              <input id="tradeQty" name="qty" type="number" min="1" class="form-control" value="1" />
            </div>

            <div class="d-flex gap-2">
              <button class="btn btn-success w-50"
                hx-post="/trade/{{symbol}}/buy"
                hx-include="#tradeQty"
                hx-target="#tradeMsg"
                hx-swap="innerHTML"
              >
                Buy
              </button>

              <button class="btn btn-danger w-50"
                hx-post="/trade/{{symbol}}/sell"
                hx-include="#tradeQty"
                hx-target="#tradeMsg"
                hx-swap="innerHTML"
              >
                Sell
              </button>
            </div>
          </div>
        </div>

        <div class="card mb-3">
          <div class="card-body">
            <div id="positionPanel"
              hx-get="/positions/{{symbol}}"
              hx-trigger="load, positionUpdated from:body"
              hx-swap="innerHTML">
            </div>
          </div>
        </div>

        <div class="card">
          <div class="card-body">
            <div id="alertsMsg"></div>

            <form class="mb-2"
              hx-post="/alerts/{{symbol}}"
              hx-target="#alertsMsg"
              hx-swap="innerHTML"
            >
              <div class="row g-2 align-items-end">
                <div class="col-6">
                  <label class="form-label small">Condition</label>
                  <select class="form-select form-select-sm" name="condition">
                    <option value="above">Above</option>
                    <option value="below">Below</option>
                  </select>
                </div>
                <div class="col-6">
                  <label class="form-label small">Price</label>
                  <input class="form-control form-control-sm" name="targetPrice" type="number" step="0.01" min="0" placeholder="e.g. 185.00" />
                </div>
                <div class="col-12">
                  <button class="btn btn-primary btn-sm w-100">Create alert</button>
                </div>
              </div>
            </form>

            <div id="alertsList"
              hx-get="/alerts/{{symbol}}/list"
              hx-trigger="load, alertsUpdated from:body"
              hx-swap="innerHTML">
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
