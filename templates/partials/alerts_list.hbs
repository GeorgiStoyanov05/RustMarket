<div class="d-flex align-items-center justify-content-between mb-2">
  <div class="fw-semibold">Alerts</div>
  <span class="badge text-bg-secondary">{{symbol}}</span>
</div>

{{#if has_alerts}}
  <ul class="list-group list-group-flush">
    {{#each alerts}}
      <li class="list-group-item d-flex align-items-center justify-content-between py-2">
        <div class="small">
          {{#if (eq condition "above")}}Above{{else}}Below{{/if}}
          <span class="fw-semibold">${{target_price}}</span>
        </div>

        <button
          class="btn btn-sm btn-outline-danger"
          hx-post="/alerts/{{../symbol}}/{{id}}/delete"
          hx-target="#alertsMsg"
          hx-swap="innerHTML"
        >
          Delete
        </button>
      </li>
    {{/each}}
  </ul>
{{else}}
  <div class="text-muted small">No alerts yet.</div>
{{/if}}
