<div class="flex-grow-1 d-flex align-items-center justify-content-center pt-4" id="emailBox">
  <div class="row justify-content-center w-100">
    <div class="col-12 col-md-6 col-lg-4">

      <h2 class="mb-3">Change Email</h2>

      {{#if errors._form}}
        <div class="alert alert-danger">{{errors._form}}</div>
      {{/if}}

      {{#if succ}}
        <div class="alert alert-success">{{succ}}</div>
      {{/if}}

      <form
        method="POST"
        hx-post="/settings/email"
        hx-target="#emailBox"
        hx-swap="outerHTML"
        novalidate
      >
        <div class="mb-3">
          <label class="form-label">Email</label>
          <input
            type="email"
            name="email"
            class="form-control {{#if errors.email}}is-invalid{{/if}}"
            value="{{values.email}}"
          />
          {{#if errors.email}}
            <div class="invalid-feedback">{{errors.email}}</div>
          {{/if}}
        </div>

        <button class="btn btn-primary w-100" type="submit">Submit</button>
      </form>
    </div>
  </div>
</div>
