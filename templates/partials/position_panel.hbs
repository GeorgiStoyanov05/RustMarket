{{#if has_position}}
  <div class="border rounded p-3 bg-body" data-qty="{{qty}}" data-avg="{{avg_price_raw}}">
    <div class="d-flex justify-content-between mb-2">
      <div class="fw-semibold">Position</div>
      <span class="badge text-bg-secondary">{{symbol}}</span>
    </div>

    <div class="small text-muted">Shares</div>
    <div class="fw-semibold mb-2">{{qty}}</div>

    <div class="row g-2 small">
      <div class="col-6">
        <div class="text-muted">Avg</div>
        <div>${{avg_price}}</div>
      </div>
      <div class="col-6">
        <div class="text-muted">Last</div>
        <div>${{last_price}}</div>
      </div>
      <div class="col-12">
        <div class="text-muted">P/L</div>
        <div class="{{pnl_class}} fw-semibold">{{pnl}} ({{pnl_pct}}%)</div>
      </div>
    </div>
  </div>
{{else}}
  <div class="text-muted small">No position for this symbol.</div>
{{/if}}
