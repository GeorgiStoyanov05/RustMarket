<div class="flex-grow-1 d-flex align-items-center justify-content-center" id="passwordBox">
  <div class="row justify-content-center w-100">
    <div class="col-12 col-md-6 col-lg-4">

      <h2 class="mb-3">Change your password</h2>

      {{#if errors._form}}
        <div class="alert alert-danger">{{errors._form}}</div>
      {{/if}}

      {{#if succ}}
        <div class="alert alert-success">{{succ}}</div>
      {{/if}}

      <form
        method="POST"
        hx-post="/settings/password"
        hx-target="#passwordBox"
        hx-swap="outerHTML"
        novalidate
      >
        <div class="mb-3">
          <label class="form-label">New Password</label>
          <input
            type="password"
            name="password"
            class="form-control {{#if errors.password}}is-invalid{{/if}}"
          />
          {{#if errors.password}}
            <div class="invalid-feedback">{{errors.password}}</div>
          {{/if}}
        </div>

        <div class="mb-3">
          <label class="form-label">Repeat New Password</label>
          <input
            type="password"
            name="rePassword"
            class="form-control {{#if errors.rePassword}}is-invalid{{/if}}"
          />
          {{#if errors.rePassword}}
            <div class="invalid-feedback">{{errors.rePassword}}</div>
          {{/if}}
        </div>

        <button class="btn btn-primary w-100" type="submit">Submit</button>
      </form>
    </div>
  </div>
</div>
